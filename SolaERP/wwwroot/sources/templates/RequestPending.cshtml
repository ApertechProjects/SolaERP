@using System.Web
@model SolaERP.Application.ViewModels.VM_RequestPending
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">
    <title>Document</title>
    <style>
        * {
            font-family: sans-serif;
        }

        body {
            background-color: rgb(34, 39, 43);
        }

        .white__page {
            width: 793px;
            height: 1122px;
            background-color: white;
            margin: 1px auto -8px;
            margin-top: 73px;
        }

        .aze {
            margin-top: 20px;
        }

        .page__content {
            width: 80%;
            height: 100%;
            margin: 0 auto;
            margin-left: 90px;
            /* background-color: red; */
            padding-top: 50px;
        }

        hr {
            background-color: green;
        }

        .subject__title {
            margin-top: 25px;
        }

            .subject__title > div {
                font-size: 22px;
                font-weight: 600;
            }

        .request__pending {
            margin-top: 55px;
            margin-bottom: 55px;
            font-size: 22px;
            color: rgb(92, 190, 255);
            font-weight: 600;
        }

        .automatically__text {
            font-size: 16px;
            color: rgb(156, 156, 156);
            font-weight: 600;
        }

        .request__no {
            color: black;
            font-weight: bold;
        }

        .client__portal__link > a {
            color: rgb(49, 170, 252);
            font-weight: 600;
        }

        .companyName__team {
            margin-top: 130px;
            margin-bottom: 25px;
            font-weight: 600;
            font-size: 13.3333px;
        }

        .developed__team {
            font-size: 13.3333px;
        }

        .copyright {
            margin-top: 65px;
            font-size: 10.6667px;
            margin-bottom: 45px;
        }


        @@media only screen and (max-width: 1024px) {
            .white__page {
                width: 693px;
                margin-top: 20px;
            }
        }

        @@media only screen and (max-width: 820px) {
            .white__page {
                width: 693px;
            }
        }

        @@media only screen and (max-width: 740px) {
            .white__page {
                width: 593px;
            }

            .page__content {
                margin-left: 40px;
                max-width: 90%;
            }
        }

        @@media only screen and (max-width: 640px) {
            .white__page {
                width: 493px;
            }
        }

        @@media only screen and (max-width: 535px) {
            .white__page {
                width: 393px;
            }

            .page__content {
                margin-left: 30px;
                max-width: 90%;
            }
        }

        @@media only screen and (max-width: 435px) {
            .white__page {
                width: 330px;
            }
        }

        @@media only screen and (max-width:370px) {
            .white__page {
                width: 310px;
            }
        }
    </style>
</head>
<body>
    <div class="white__page">
        <div class="page__content">
            <hr>
            <div class="subject__title">
                <div>Subject: Request {Request NO} is pending for Approvals,</div>
                <div>Sequence {Seq}</div>
            </div>

            <div class="request__pending">
                @Model.Subject
            </div>

            <div class="automatically__text">This is an automatically generated email - please do not reply</div>
            <div>@Model.GenerateBody()</div>

            <p style="color:black;">@Model.GenerateCompanyNameTeamText()</p>

            <p style="font-weight: bold;">@Model.GenerateDevelopedInformationText()</p>

            <p>@Model.GenerateCopyRightText()</p>
            <hr>

        </div>
    </div>
</body>
</html>