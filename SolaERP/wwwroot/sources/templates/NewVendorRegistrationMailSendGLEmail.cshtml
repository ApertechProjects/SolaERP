@model SolaERP.Application.ViewModels.VM_NewVendorRegistrationMailSendGLEmail
@{
	Layout = null;
}
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="x-apple-disable-message-reformatting">
	<title></title>
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet">

	<!-- CSS Reset : BEGIN -->
	<style>
		html, body {
			margin: 0;
			padding: 0;
			width: 100%;
			background: #f1f1f1;
			font-family: 'Lato', sans-serif;
			font-size: 14px;
			line-height: 1.5;
		}

		table {
			border-spacing: 0 !important;
			border-collapse: collapse !important;
			width: 100%;
			margin: 0 auto !important;
		}

		a {
			text-decoration: none;
		}

		/* Hero section style */
		.hero {
			background: #ffffff;
			padding: 2em 0;
			text-align: center;
		}

		/* Logo */
		.logo h1 {
			color: #32abdb;
			font-size: 24px;
			font-weight: 700;
		}

		/* Button styles */
		.btn {
			padding: 10px 15px;
			display: inline-block;
			border-radius: 5px;
			color: white;
			text-decoration: none;
			background: #5b16b6;
		}

		.btn:hover {
			background: #4b0f9d;
		}

		/* Media queries for mobile responsiveness */
		@media screen and (max-width: 500px) {
		.hero .text {
			padding: 0 1em;
		}
		}
	</style>
</head>

<body>
<div class="email-container" style="width: 100%; max-width: 600px; margin: 0 auto; background: #ffffff; padding: 2em;">

	<!-- English Section -->
	<table>
		<tr>
			<td class="logo" style="text-align: center;">
				<h1 style="color: red;">@Model.GetHeaderOfMailEn</h1>
			</td>
		</tr>
		<tr>
			<td class="hero">
				<h4 style="color: gray; font-weight: bold;">This is an automatically generated email - please do not reply</h4>
				<p>@Model.GetBodyOfMailEn()</p>
			</td>
		</tr>
	</table>

	<!-- Azerbaijani Section -->
	<table>
		<tr>
			<td class="logo" style="text-align: center;">
				<h1 style="color: red;">@Model.GetHeaderOfMailAz</h1>
			</td>
		</tr>
		<tr>
			<td class="hero">
				<h4 style="color: gray; font-weight: bold;">Bu avtomatik yaradılan e-poçtdur - lütfən cavab verməyin.</h4>
				<p>@Model.GetBodyOfMailAz()</p>
			</td>
		</tr>
	</table>

	<!-- Footer Section -->
	<table>
		<tr>
			<td style="text-align: center; color: #000; font-size: 14px; padding-top: 2em;">
				<p>@Model.GenerateCopyRightText()</p>
			</td>
		</tr>
	</table>

</div>
</body>
</html>